name: CI

on:
  pull_request:
  push:
    branches:
      - dev
      - main

jobs:
  test-and-lint:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        module: [simba, websocket, telemetry]
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Go
        uses: actions/setup-go@v4
        with:
          go-version: "1.25"

      - name: Run tests for ${{ matrix.module }}
        run: |
          if [ "${{ matrix.module }}" = "simba" ]; then
            go test -v ./...
          else
            cd ${{ matrix.module }}
            go test -v ./...
          fi

      - name: Install nilaway
        run: go install go.uber.org/nilaway/cmd/nilaway@latest

      - name: Run nilaway for simba
        if: ${{ matrix.module == 'simba' }}
        run: nilaway -test=false ./...

      - name: Run nilaway for ${{ matrix.module }}
        if: ${{ matrix.module != 'simba' }}
        run: |
          cd ${{ matrix.module }}
          nilaway -test=false ./...

      - name: Run golangci-lint for simba
        if: ${{ matrix.module == 'simba' }}
        uses: golangci/golangci-lint-action@v9
        with:
          working-directory: ./

      - name: Run golangci-lint for ${{ matrix.module }}
        if: ${{ matrix.module != 'simba' }}
        uses: golangci/golangci-lint-action@v9
        with:
          working-directory: ./${{ matrix.module }}
